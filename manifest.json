{
  "manifest_version": 3,
  "name": "wordy",
  "description": "A simple extension to help you learn new words",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["src/Content.root.tsx"]
    }
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
