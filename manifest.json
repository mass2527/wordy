{
  "manifest_version": 3,
  "name": "Wordy",
  "description": "A simple extension to help you learn new words",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["src/Content.root.tsx"]
    }
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": ["storage", "unlimitedStorage"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
